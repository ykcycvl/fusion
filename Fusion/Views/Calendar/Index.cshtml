@model Fusion.Models.CalendarModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Календарь управляющего";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-lg-3 col-md-3">
        @Html.ActionLink("Создать", "Add", null, new { @class = "btn btn-default" })
    </div>
</div>
<br />
<ul class="list-unstyled">
    @foreach (var e in Model.employees)
    {
        <li>
            @Html.ActionLink(@e.Name, "ViewCalendar", new { @userName = e.Login, @period = DateTime.Today.ToString("MM.yyyy") })
        </li>
    }
</ul>