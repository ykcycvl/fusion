@model Fusion.Models.CallCenter.CallCenterModels.OperatorReport
@{
    ViewBag.Title = "Отчет по операторам";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Отчет по операторам</h2>
<div style="margin: 10px 0; border:none;">
    @using (Html.BeginForm("OperatorsReport", "CallCenter", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="col-xs-2">
            С
            @Html.TextBoxFor(m => m.start_dt, "{0:dd.MM.yyyy}", new { @class = "form-control date" })
        </div>
        <div class="col-xs-2">
            по
            @Html.TextBoxFor(m => m.end_dt, "{0:dd.MM.yyyy}", new { @class = "form-control date" })
        </div>
        <br />
    <input type="submit" value="Показать" class="btn btn-default" />
    }
</div>
<div class="row">
    <div class="col-md-10">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Оператор</th>
                <th>Дата</th>
                <th>Сумма заказов</th>
                <th>Оплачено</th>
                <th>Количество</th>
            </tr>
            @if (Model != null)
            {
                foreach (var od in Model.CCOperatorsReportData)
                {
                    <tr>
                        <td>@od.operatorName</td>
                        <td>@od.applyDate</td>
                        <td>@od.orderSum</td>
                        <td>@od.payedSum</td>
                        <td>@od.ordersCount</td>
                    </tr>
                }
            }
        </table>
    </div>
</div>