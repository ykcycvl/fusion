@model Fusion.Models.EmailTemplate
@{
    ViewBag.Title = "Создание шаблона";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Add", "Content", FormMethod.Post))
{
    <div class="col-md-3">
        <div class="form-group">
            @Html.LabelFor(p => p.Name)
            @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Title)
            @Html.TextBoxFor(p => p.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.TextAreaFor(p => p.Content, new { @class = "form-control", @rows = "30" })
    </div>

    <input type="submit" value="Сохранить" class="btn btn-default" />
}