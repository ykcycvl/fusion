@model Fusion.Models.RSS

@{
    ViewBag.Title = "Единый портал БК, КЦ и отчетности";
}
<h2>Vega</h2>

<div class="jumbotron">
    <p>
        Для работы в системе необходимо быть авторизованным пользователем домена fg.local
        <br />
        Для получения доступа обратитесь к администратору домена
    </p>
</div>

<script type="text/javascript" src="//vk.com/js/api/openapi.js?136"></script>

<div class="row">
    <div class="col-lg-12">
        <!-- VK Widget -->
        <div id="vk_groups" style="margin:0 auto;"></div>
        <script type="text/javascript">
            VK.Widgets.Group("vk_groups", { mode: 4, wide: 0, width: "auto", height: "600" }, 48766047);
        </script>
    </div>
</div>

@foreach (var rc in Model.channels)
{
    <div class="col-lg-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @rc.rssTitle
            </div>
            <div class="panel-body">
                @foreach (var r in rc.rssNews)
                {
                    <div style="padding: 10px 0pt 20px 0pt;">
                        <table style="width:100%">
                            <tr>
                                <td>
                                    @r.pubDate
                                    <h5><a href="@r.newsLink">@r.newsTitle</a></h5>
                                    <div style="padding: 0pt 0pt 0pt 0pt;">
                                        @r.newsDescription
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
}