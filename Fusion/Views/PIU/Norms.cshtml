    ViewBag.Title = "Нормы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/codebase/webix.js"></script>
<link href="~/Scripts/codebase/webix.css" rel="stylesheet" />
<script src="~/Scripts/codebase/i18n/ru.js"></script>

<style>
    #areaA {
        margin: 0;
        width: 100%;
        height: 600px;
        float: left;
        padding: 0;
    }

    .webix_hcell {
        height: 46px !important;
        line-height: 23px !important;
        text-align: center;
        font-size: 12px;
    }

    .webix_template {
        padding: 0 !important;
    }

    .level1css {
        font-weight: bold;
        color: #000;
        background-color: #b7dee8;
    }

    .level2css {
        color: #000;
    }

    .level3css {
        text-align: right;
        color: #555;
    }

    .rightAlign {
        text-align: right;
    }

    .factColumn {
        text-align: right;
        background-color: #ddd;
    }

    .normColumn {
        border-left: 1px solid #000;
        background: #b7e8c6;
        text-align: right;
    }

    .planColumn {
        text-align: right;
        border-left: 1px solid #000;
    }

    .divColumn {
