@model Fusion.Models.PIU

@{
    ViewBag.Title = "ПиУ: просмотр";
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
}

<script src="~/Scripts/codebase/webix.js"></script>
<link href="~/Scripts/codebase/webix.css" rel="stylesheet" />
<script src="~/Scripts/codebase/i18n/ru.js"></script>
<style>
    #areaA {
        margin: 0;
        width: 100%;
        height: 600px;
        float: left;
        padding: 0;
    }

    .toAllow {
        color: #000 !important;
    }

    .webix_hcell {
        height: 46px !important;
        line-height: 23px !important;
        text-align: center;
        font-size: 12px;
    }

    .webix_template {
        padding: 0 !important;
    }

    .level1css {
        font-weight: bold;
        color: #000;
        background-color: #b7dee8;
    }

    .level2css {
        color: #000;
    }

    .level3css {
        text-align: right;
        color: #555;
    }

    .rightAlign {
        text-align: right;
    }

    .factColumn {
        text-align: right;
        background-color: #ddd;
    }

    .normColumn {
        border-left: 1px solid #000;
        background: #b7e8c6;
        text-align: right;
    }

    .planColumn {
        text-align: right;
        border-left: 1px solid #000;
    }

    .divColumn {
        text-align: right;
        background-color: #ffddf3;
    }

    .itogColumn {
        text-align: right;
        background-color: #c8c8c8;
    }

    .misMatch {
        background-color: #ff8787;
    }

    .readonly {
        background-color: #999;
    }
</style>

<script type="text/javascript">
    webix.ready(function () {
        grid_rub = webix.ui({
            container: "tabl_rub",
            id: "grid_rub",
            view: "datatable",
            leftSplit: 2,
            rowHeight: 23,
            padding: 5,
            columns: [
                @Html.Raw(Model.ColumnsRub)
            ],
            data: {
                data: [
                    @Html.Raw(Model.Data)
                ]
            },
            select: "cell",
            multiselect: true,
            blockselect: true,
            navigation: "true",
            height: 500,
            math: true
        });

        //Проценты
        grid_prc = webix.ui({
            container: "tabl_prc",
            id: "grid_prc",
            view: "datatable",
            leftSplit: 2,
            rowHeight: 23,
            padding: 5,
            columns: [
                @Html.Raw(Model.ColumnsPrc)
            ],
            data: {
                data: [
                    @Html.Raw(Model.Data)
                ]
            },
            select: "cell",
            multiselect: true,
            blockselect: true,
            clipboard: "block",
            navigation: "true",
            height: 500,
            math: true
        });

        var tabbar = {
            view: "tabbar", type: "bottom", multiview: true, options: [
                { value: "<span class='webix_icon fa-rub'></span><span style='padding-left: 4px'>ПиУ, руб.</span>", id: 'rubView' },
                { value: "<span class='webix_icon fa-tasks'></span><span style='padding-left: 4px'>ПиУ, %</span>", id: 'prcView' },
            ], height: 30
        };
        var data = {
            cells: [
                {
                    id: "rubView",
                    content: "areaRub",
                    select: true
                },
                {
                    id: "prcView",
                    content: "areaPrc"
                }
            ]
        };

        webix.ui({
            container: "areaA",
            rows: [
                data,
                tabbar
            ]
        });
    });

    function ExportToExcel() {
        var grid = $$("grid_rub");
        webix.message({ type: "default", text: "Подготовка данных..." });
        var serializedData = JSON.stringify(grid.serialize());
        $("#tableData").val(serializedData);
        $("#excelForm").submit();
        return false;
    }

    function IsNumber(value){
        if(typeof value == "undefined" || value == "")
            return true;
        else
            return $.isNumeric(value);
    }

    function GetVal(val)
    {
        if (!IsNumber(val))
            return '';
        else
            return val;
    };

    function markDiv(value, config) {
        if (Math.abs(value) > config["maxDiv"])
            return "misMatch";

        return value;
    }

    function markRO(value, config) {
        if (config["readonly"])
            return "readonly";

        return value;
    }

    $(function () {
        $("#Organization").change(function () {
            $("#loader").show();
            window.location.href = '/PIU/ViewPlan?Organization=' + encodeURIComponent($("#Organization").val()) + '&StartDate=@Model.StartDate&EndDate=@Model.EndDate';
        });
    });
</script>

<div style="position:fixed; left: 0; top: 0; height: 95vh; width: 100%;background:#fff url('/images/8pm76v.gif') no-repeat center;display: none;z-index:9999;opacity:0.8;" id="loader">
</div>

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-3">
        <div class="alert alert-success">
            @Html.DropDownListFor(m => m.Organization, Model.OrganizationsSelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-3 text-center">
        <div class=" alert alert-info">
            Начало периода: <b>@Model.StartDate</b>
        </div>
    </div>
    <div class="col-md-3 text-center">
        <div class=" alert alert-info">
            Конец периода: <b>@Model.EndDate</b>
        </div>
    </div>
</div>

<div id="areaA"></div>
<div id="areaRub">
    <input type="button" value="Скачать Excel" onclick="ExportToExcel()" class="btn btn-danger" style="float:right" />
    <div id="tabl_rub"></div>
    <form action="ExportToExcel" method="post" target="_blank" id="excelForm">
        <input type="hidden" name="data" id="tableData" />
    </form>
</div>
<div id="areaPrc">
    <h3>Пиу, %</h3>
    <div id="tabl_prc"></div>
</div>