@model List<Fusion.Models.RK7APIModels.MenuItemProperties>

@{
    ViewBag.Title = "Меню RKeeper'а";
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
}

<link href="//cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>

<script>
    $(function () {
        $('#menuTable').DataTable({
            "paging": true,
            "ordering": true,
            "info": true,
            "language": {
                "lengthMenu": "Показывать _MENU_ на странице",
                "zeroRecords": "Ничего не нашли - сорян!",
                "info": "Страница _PAGE_ из _PAGES_",
                "infoEmpty": "Ноу рекордс эвейлбл",
                "infoFiltered": "(фильтрануто _MAX_ записей)",
                "sSearch": "<span>Фильтрануть</span> _INPUT_",
            }
        });
    });
</script>

<h2>Меню RKeeper'а</h2>
@using (Html.BeginForm("MenuPortions", "RK7", FormMethod.Post, new { id = "Form" }))
{
    <input type="submit" class="btn btn-small btn-success" value="Скачать" />
}
    <table id="menuTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Блюдо</th>
                <th>Коэфициент</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mi in Model)
            {
                <tr>
                    <td>@mi.name</td>
                    <td>@mi.coef</td>
                </tr>
            }
        </tbody>
    </table>
