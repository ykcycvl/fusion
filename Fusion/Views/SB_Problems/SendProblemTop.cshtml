@model Fusion.Models.SB
@{
    ViewBag.Title = "SendProblemTop";
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
}

<div class="panel panel-yellow">
    <div class="panel-heading">
        <h3 class="panel-title">
            Создание проблемы
        </h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("SendProblemTop", "SB_Problems", FormMethod.Post, new { id = "Form" }))
        {
            <div class="form-group">
                <label for=@Model.problem.date>Дата</label>
                @Html.TextBoxFor(m => m.problem.date, new { @class = "form-control", @type="date", @required = "true", @Value = Model.problem.date.ToString("yyyy-MM-dd") })
            </div>
            <div class="form-group">
                <label for=@Model.problem.problem>Проблема</label>
                @Html.TextBoxFor(m => m.problem.problem, new { @class = "form-control", @required = "true" })
            </div>
            <div class="form-group">
                <label for=@Model.problem.solution>Решение</label>
                @Html.TextBoxFor(m => m.problem.solution, new { @class = "form-control", @required = "true" })
            </div>
            <div class="form-group">
                <label for=@Model.problem.restaurant_id>Ресторан</label>
                @Html.DropDownListFor(m => m.problem.restaurant_id, Model.RestaurantsSelectList, new { @class = "form-control", @required = "true" })
            </div>
            <input type="submit" class="btn btn-primary" value="Сохранить" />
        }
    </div>
</div>

