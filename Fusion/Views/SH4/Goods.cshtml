@model Fusion.Models.SH4.SH4

@{
    Layout = null;
}

<div class="col-lg-12" style="overflow-x:scroll">
    <table class="table table-bordered" id="Table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Наименование
                </th>
                <th>
                    Преф.
                </th>
                <th>
                    Код
                </th>
                <th>
                    Ост.
                </th>
                <th>
                    Ед.изм.
                </th>
                <th>
                    Себест.
                </th>
                <th>
                    Себест2.
                </th>
                <th>
                    НДС
                </th>
                <th>
                    НСП
                </th>
                <th>
                    Сумма
                </th>
                <th>
                    Группа
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model.GoodsBalances)
            {
                double sum = g.cost * g.balance;
                
                <tr>
                    <td>@g.good.id</td>
                    <td>@g.good.Name</td>
                    <td>@g.good.CodePrefix</td>
                    <td>@g.good.CodeNumber</td>
                    <td style="text-align:right">@g.balance.ToString("0.000")</td>
                    <td>@g.good.Unit</td>
                    <td style="text-align:right">@g.cost.ToString("0.00")</td>
                    <td style="text-align:right">@g.cost_bal.ToString("0.00")</td>
                    <td style="text-align:right">@g.NDS.ToString("0.00")</td>
                    <td style="text-align:right">@g.NSP.ToString("0.00")</td>
                    <td style="text-align:right">@sum.ToString("0.00")</td>
                    <td>@g.good.GroupName</td>
                </tr>
            }
        </tbody>
    </table>
</div>