@model Fusion.Models.SKK.SKKModels
@{
    ViewBag.Title = "addRestaurant";
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
    Model.PositionName = "Шеф-повар";
    Model.ChiefName = "";
    Model.SuChiefName = "";
    Model.ManagerName = "";
    Model.DirectorName = "";
}
<div class="col-md-6 col-md-push-3">
    <div class="panel panel-yellow">
        <div class="panel-heading">
            <h3 class="panel-title">
                Добавить ресторан
            </h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("addRestaurant", "SKK", FormMethod.Post, new { id = "Form", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(m => m.restaurant.id)
                <div class="form-group">
                    <label for="@Model.restaurant.name">Название</label>
                    @Html.TextBoxFor(m => m.restaurant.name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="@Model.restaurant.director_id">Управляющий</label>
                    @Html.DropDownListFor(m => m.restaurant.director_id, Model.DirectorsSelectList, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="@Model.restaurant.chief_id">Шеф-повар</label>
                    @Html.DropDownListFor(m => m.restaurant.chief_id, Model.ChiefsSelectList, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="@Model.restaurant.suchief_id">Су-шеф</label>
                    @Html.DropDownListFor(m => m.restaurant.suchief_id, Model.SuChiefsSelectList, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="@Model.restaurant.manager_id">Менеджер зала</label>
                    @Html.DropDownListFor(m => m.restaurant.manager_id, Model.ManagersSelectList, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @for (int i = 0; i < Model.BlockAccessList.Count(); i++)
                    {
                        <p>
                            @Html.CheckBoxFor(m => Model.BlockAccessList[i].isActive, new { @class = "form-group" })
                            @Model.BlockAccessList[i].BlockName
                            @Html.HiddenFor(m => Model.BlockAccessList[i].BlockId)
                        </p>
                    }
                </div>
                <input type="submit" class="btn btn-primary" value="Сохранить" />
            }
        </div>
    </div>
</div>