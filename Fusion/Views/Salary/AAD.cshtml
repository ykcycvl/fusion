<script type="text/javascript">
    $(function () {
        var timerId = setInterval("AutoSave()", 300000);

        $('.date-picker').datepicker({
            changeMonth: true,
            changeYear: true,
            showButtonPanel: true,
            dateFormat: '0m.yy',
            onClose: function (dateText, inst) {
                $(this).datepicker('setDate', new Date(inst.selectedYear, inst.selectedMonth, 1));
                blur();
            }
        });
        $.datepicker.setDefaults($.datepicker.regional["ru"]);

        var form = {
            view: "htmlform",
            content: "DocumentParameters"
        };

        var DocParameters = webix.ui({
            view: "window",
            id: "DocParameters",
            width: 300,
            position: "center",
            modal: true,
            head: "Создание новой ведомости",
            body: webix.copy(form)
        });

        var docnumber = "@Model.DocNumber";

        if (docnumber == null || docnumber == '')
            clearInterval(timerId);

        if ((docnumber == null || docnumber == ''))
            DocParameters.show();
    });

    function ApplyDocParameters() {
        $("#loader").show();
        window.location.href = '/Salary/AAD?orgname=' + encodeURIComponent($("#FullName").val()) + '&period=' + $("#Period").val();
        return false;
    }

    webix.ready(function () {
        grid = webix.ui({
            container: "tabl",
            id: "grid",
            view: "datatable",
            leftSplit: 9,
            rowHeight: 23,
            padding: 5,
            columns: [
              { id: "subdivisiionId", header: "subdivisiionId", hidden: "true" },
              { id: "DocNumber", header: "DocNumber", hidden: "true" },
              { id: "Period", header: "Period", hidden: "true" },
              { id: "Organization", header: "Organization", hidden: "true" },
              { id: "Code", header: "Code", hidden: "true" },
              { id: "Position", header: "Должность", width: 150 },
              { id: "FullName", header: "ФИО", width: 230 },
              { id: "Rate", header: "Оклад" },
              @Html.Raw(aadsum)
              @Html.Raw(aadcolumns)
            ],
            spans: true,
            data: {
                data: [
                    @Html.Raw(TableData)
                ],
                spans: [
                    @Html.Raw(SpansData)
                ]
            },
            editable: true,
            select: "cell",
            multiselect: true,
            blockselect: true,
            clipboard: "block",
            navigation: "true",
            editaction: "dblclick",
            height: 500,
            math: true
        });

        webix.UIManager.addHotKey("any", function (view) {
            var pos = view.getSelectedId();
            view.edit(pos);
        }, grid);

        grid.attachEvent("onPaste", function (code, e) {
            grid.refreshColumns();
        });
    });

    function Save() {
        webix.message({ type: "default", text: "Сохранение ведомости..." });
        $("#loader").show();
        var grid = $$("grid");
        var serializedData = grid.serialize();
        webix.ajax().post("/Salary/SaveAAD", { data: serializedData }, function (result) {
            $("#loader").hide();
            var response = JSON.parse(result)
            webix.message({ type: response.result, text: response.message });
        });

        return false;
    }

    function AutoSave() {
        webix.message({
            type: "default",
            text: "Автосохранение..."
        });
        var grid = $$("grid");
        var serializedData = grid.serialize();
        webix.ajax().post("/Salary/SaveAAD", { data: serializedData }, function (result) {
            var response = JSON.parse(result)
            webix.message({ type: response.result, text: response.message });
        });
        return false;
    }
</script>

