@model Fusion.Models.SalaryModels.Vega1CWS.AccrualAndDetentionViewModel

@{
    ViewBag.Title = "Начисления и удержания " + Model.FullName;
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
    
    int j = 0;

    string TableData = "";
    string SpansData = "";
    string aadcolumns = "";
    string aadsum = "";

    foreach (var subdivision in Model.Subdivisions)
    {
        TableData += "{ id: \"sub" + subdivision.FullName + "\", Position: \"" + subdivision.FullName + "\", $css:\"subhighlight\" },\r\n";

        foreach (var e in subdivision.Employees)
        {
            aadcolumns = "";
            aadsum = "{ id: 'aadsum', header: 'Итого', width: 80, math: '";
            j++;
            TableData += "{ Code: \"" + e.Code + "\", Organization: \""
                + Model.FullName + "\", Period: \"" + Model.Period + "\", DocNumber: \""
                + Model.DocNumber + "\", Date: \"" + Model.Date.ToString("yyyy-MM-dd") + "\", Position: \""
                + e.Position + "\", FullName: \""
                + e.FullName + "\", Rate: \"" + e.Rate + "\"";

            foreach (var a in e.Accruals)
            {
                aadcolumns += "{ id: '_ACCCODE_" + a.Code.Trim() + "', header: '" + a.Name + " (+)" + "', width: 160, editor: 'text', batch: 2 },\r\n";

                if (a.Sum != 0)
                {
                    TableData += ", _ACCCODE_" + a.Code.Trim() + ": \"" + a.Sum.ToString("0.00") + "\"";
                }
                
                aadsum += " + [$r, _ACCCODE_" + a.Code.Trim() + "]";
            }

            foreach (var d in e.Detentions)
            {
                aadcolumns += "{ id: '_DETCODE_" + d.Code.Trim() + "', header: '" + d.Name + " (-)" + "', width: 160, editor: 'text', batch: 2 },\r\n";

                if (d.Sum != 0)
                {
                    TableData += ", _DETCODE_" + d.Code.Trim() + ": \"" + d.Sum.ToString("0.00") + "\""; 
                }
                
                aadsum += " - [$r, _DETCODE_" + d.Code.Trim() + "]";
            }

            aadsum += "' },";
            TableData += "},";
        }
    }

    foreach (var subdivision in Model.Subdivisions)
    {
        SpansData += "[ \"sub" + subdivision.FullName + "\", \"Position\", 2, 1, null, \"subhighlight\" ],\r\n";
    }
}

