@{
    ViewBag.Title = "ЗУП: Зарплата";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-lg-4 col-md-4">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-tasks fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h4>Зарплата и взносы</h4>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <span class="pull-left">@Html.ActionLink("Просмотр/редактирование", "AccrualsAndDetentions")</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
                <span class="pull-left">@Html.ActionLink("Создание", "AAD")</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-tasks fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h4>Учет рабочего времени</h4>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <span class="pull-left">@Html.ActionLink("Индивидуальные графики", "TimeSheets")</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>