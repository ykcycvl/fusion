@model Fusion.Models.SalaryModels.SalariesAndContributions
@{
    ViewBag.Title = "Начисление зарплаты и взносов " + Model.Number;
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
}

<h2>@ViewBag.Title</h2>

Организация: @Model.OrganizationName
<br/>
Месяц: @Model.Period.ToString("MMMM yyyy")
<br/>
Номер: @Model.Number
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            Сотрудник
        </th>
        <th style="text-align:right">
            Начислено
        </th>
        <th style="text-align:right">
            Удержано
        </th>
    </tr>
    @foreach (var e in Model.Employees)
    {
        <tr style="cursor:pointer" onclick="window.location.href = '/Salary/EmployeeSalaryDetail?number=@Model.Number&code=@e.Code'">
            <td>
                @e.FullName
            </td>
            <td style="text-align:right">
                @e.AccrualsSum.ToString("n")
            </td>
            <td style="text-align:right">
                @e.DetentionsSum.ToString("n")
            </td>
        </tr>
    }
</table>