@model Fusion.Models.Fabrika.TSPModels
@{
    ViewBag.Title = "Редактировать доступ";
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
    Model.RestaurantName = "";
}
<div class="row">
    <div class="col-md-8 col-md-push-2">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Редактирование доступа
                </h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("EditAccess", "TSP", FormMethod.Post, new { id = "Form", enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label for=@Model.Access.RestaurantID>Айди ресторана</label>
                        @Html.DropDownListFor(m => m.RestaurantName, Model.RestaurantsSelectList, new { @class="form-control" })
                    </div>
                    <div class="form-group">
                        <label for=@Model.Access.UserName>Юзер</label>
                        @Html.TextBoxFor(m => m.Access.UserName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" />
                        @Html.HiddenFor(m => m.Access.Id)
                    </div>
                }
            </div>
        </div>
    </div>
</div>