<script>
    $(function () {
        $("#categoryId").change(function () {
            window.location.href = '/Zakup/CreateOrder?catId=' + $("#categoryId").val();
        });
        $("#sub").click(function () {
            var value = $("#count_0").val();
            if ($(value != "")) { $("#IsOrdered_0").prop("checked", true) }
            else { $("#IsOrdered_0").prop("checked", false) }
