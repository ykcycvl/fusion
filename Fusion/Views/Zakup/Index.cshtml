@model Fusion.Models.ZakupModel
@{
    ViewBag.Title = "Отдел Закупа";
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-lg-4 col-md-4">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-tasks fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h4>Список номенклатур</h4>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <span class="pull-left">@Html.ActionLink("Номенклатуры", "Nomenclatures")</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-tasks fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h4>Список поставщиков</h4>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <span class="pull-left">@Html.ActionLink("Поставщики", "Vendors")</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-tasks fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h4>Список заявок</h4>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <span class="pull-left">@Html.ActionLink("Заявки", "orders")</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
                <span class="pull-left">@Html.ActionLink("Заявки по поставщикам", "Orders_by_vendors")</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>